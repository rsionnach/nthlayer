# Mock server configuration for local development
# Copy to .env or source directly: cp .env.mock .env

# Application
NTHLAYER_ENVIRONMENT=dev
NTHLAYER_DEBUG=true
NTHLAYER_API_PREFIX=/v1

# Database settings (Docker Compose)
NTHLAYER_DB_DSN=postgresql+psycopg://postgres:postgres@localhost:5432/NTHLAYER
NTHLAYER_DB_POOL_SIZE=5
NTHLAYER_DB_MAX_OVERFLOW=10
NTHLAYER_DB_POOL_TIMEOUT=30.0
NTHLAYER_DB_POOL_RECYCLE=3600

# Redis settings (Docker Compose)
NTHLAYER_REDIS_URL=redis://localhost:6379/0
NTHLAYER_REDIS_MAX_CONNECTIONS=50

# AWS / SQS (not needed for local dev, but required by config)
NTHLAYER_AWS_REGION=us-east-1
NTHLAYER_SQS_QUEUE_URL=http://localhost:4566/000000000000/NTHLAYER-jobs
NTHLAYER_SQS_DLQ_URL=http://localhost:4566/000000000000/NTHLAYER-jobs-dlq
NTHLAYER_SQS_VISIBILITY_TIMEOUT=300

# AWS Secrets Manager (not needed for local dev)
NTHLAYER_SECRETS_MANAGER_SECRET_ID=

# Authentication (not needed for local dev)
NTHLAYER_COGNITO_USER_POOL_ID=
NTHLAYER_COGNITO_REGION=us-east-1
NTHLAYER_COGNITO_AUDIENCE=
NTHLAYER_JWT_ISSUER=
NTHLAYER_JWT_JWKS_URL=

# HTTP client settings
NTHLAYER_HTTP_TIMEOUT=30.0
NTHLAYER_HTTP_MAX_RETRIES=3
NTHLAYER_HTTP_RETRY_BACKOFF_FACTOR=2.0

# 3rd party integrations - MOCK SERVER URLs
NTHLAYER_CORTEX_BASE_URL=http://localhost:8001/cortex
NTHLAYER_PAGERDUTY_BASE_URL=http://localhost:8001/pagerduty
NTHLAYER_GRAFANA_BASE_URL=http://localhost:8001/grafana
NTHLAYER_DATADOG_BASE_URL=http://localhost:8001/datadog
NTHLAYER_SLACK_WEBHOOK_URL=http://localhost:8001/slack/chat.postMessage
NTHLAYER_SLACK_DEFAULT_CHANNEL=#NTHLAYER-alerts

# Tokens (not validated by mock server, can be anything)
NTHLAYER_CORTEX_TOKEN=mock-cortex-token
NTHLAYER_PAGERDUTY_TOKEN=mock-pagerduty-token
NTHLAYER_GRAFANA_API_KEY=mock-grafana-key
NTHLAYER_DATADOG_API_KEY=mock-datadog-key
NTHLAYER_DATADOG_APP_KEY=mock-datadog-app-key
NTHLAYER_SLACK_BOT_TOKEN=mock-slack-token

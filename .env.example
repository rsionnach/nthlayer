# Application
NTHLAYER_ENVIRONMENT=dev
NTHLAYER_DEBUG=true
NTHLAYER_API_PREFIX=/v1

# Database settings
NTHLAYER_DB_DSN=postgresql+psycopg://postgres:postgres@localhost:5432/NTHLAYER
NTHLAYER_DB_POOL_SIZE=5
NTHLAYER_DB_MAX_OVERFLOW=10
NTHLAYER_DB_POOL_TIMEOUT=30.0
NTHLAYER_DB_POOL_RECYCLE=3600

# Redis settings
NTHLAYER_REDIS_URL=redis://localhost:6379/0
NTHLAYER_REDIS_MAX_CONNECTIONS=50

# AWS / SQS
NTHLAYER_AWS_REGION=eu-west-1
NTHLAYER_SQS_QUEUE_URL=https://sqs.eu-west-1.amazonaws.com/123456789012/NTHLAYER-dev-jobs
NTHLAYER_SQS_DLQ_URL=https://sqs.eu-west-1.amazonaws.com/123456789012/NTHLAYER-dev-jobs-dlq
NTHLAYER_SQS_VISIBILITY_TIMEOUT=300

# AWS Secrets Manager
NTHLAYER_SECRETS_MANAGER_SECRET_ID=NTHLAYER/dev/tokens

# Authentication (JWT/Cognito)
NTHLAYER_COGNITO_USER_POOL_ID=
NTHLAYER_COGNITO_REGION=eu-west-1
NTHLAYER_COGNITO_AUDIENCE=
NTHLAYER_JWT_ISSUER=
NTHLAYER_JWT_JWKS_URL=

# HTTP client settings
NTHLAYER_HTTP_TIMEOUT=30.0
NTHLAYER_HTTP_MAX_RETRIES=3
NTHLAYER_HTTP_RETRY_BACKOFF_FACTOR=2.0

# 3rd party integrations
NTHLAYER_CORTEX_BASE_URL=https://cortex.example.com
NTHLAYER_PAGERDUTY_BASE_URL=https://api.pagerduty.com
NTHLAYER_SLACK_DEFAULT_CHANNEL=#NTHLAYER-alerts

# Secrets (local fallback; prefer AWS Secrets Manager in production)
NTHLAYER_CORTEX_TOKEN=
NTHLAYER_PAGERDUTY_TOKEN=
NTHLAYER_SLACK_BOT_TOKEN=
